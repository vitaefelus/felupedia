{% extends 'base.html.twig' %}

{% block title %}
    {{ article.title }}
{% endblock %}

{% block body %}
    <div class="container container-article container-fix">
        <h1 class="article">{{ article.title }}</h1>
        <hr>
        {% if article is defined and article|length and article.getParagraphs()|length %}
            {% for paragraph in article.getParagraphs() %}
                <div class="row paragraph">
                    {% if not paragraph.subheading is empty %}
                        <h5>{{ paragraph.subheading }}</h5>
                    {% endif %}
                    <div class="col">
                        <p class="float-left">{{ paragraph.textContent }}</p>
                    </div>
                    {% if not paragraph.getPicture().src is empty %}
                        <figure class="figure float-right align-self-center">
                            <img class="figure-img img-fluid" src="{{ asset('images/' ~ paragraph.getPicture().src) }}" alt="{{ article.title }}"/>
                            <figcaption class="figure-caption text-center">{{ paragraph.getPicture().description }}</figcaption>
                        </figure>
                    {% endif %}
                </div>

            {% endfor %}

        {% else %}
            <p>
                {{ 'message.item_not_found'|trans }}
            </p>
        {% endif %}
    </div>
{% endblock %}