{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.comment_new'|trans }}
{% endblock %}

{% block body %}
    <div class="container container-fix">
        <h1>{{ 'title.comment_new'|trans }}</h1>
        {{ form_start(form, { method: 'POST', action: url('article_comment_new', {id: article.getId()}) }) }}
        {{ form_widget(form) }}
        <div class="form-group row float-sm-right">
            <input type="submit" value="{{ 'action.save'|trans }}" class="btn btn-primary" />
        </div>
        <div class="form-group row float-sm-left">
            <a href="{{ url('article_index') }}" class="btn btn-link">
                {{ 'action.back_to_list'|trans }}
            </a>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}