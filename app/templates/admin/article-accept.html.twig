{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.article_accept'|trans({'%id%': article.id|default('')}) }}
{% endblock %}

{% block body %}
    <div class="container container-fix">
    <h1>{{ 'title.article_accept'|trans({'%id%': article.id|default('')}) }}</h1>
    {{ form_start(form, { method: 'PUT', action: url('admin_accept_article', {id: article.id}) }) }}
    {{ form_widget(form) }}
    <div class="form-group row float-sm-right">
        <input type="submit" value="{{ 'action.save'|trans }}" class="btn btn-primary" />
    </div>
    <div class="form-group row float-sm-left">
        <a href="{{ url('admin_list_not_accepted_articles') }}" class="btn btn-link">
            {{ 'action.back_to_list'|trans }}
        </a>
    </div>
    {{ form_end(form) }}
    </div>
{% endblock %}