{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.user_grant'|trans }}
{% endblock %}

{% block body %}
    <div class="container container-fix">
        <h1>{{ 'title.user_grant'|trans }}{{ user.username }}</h1>
        {{ form_start(form, { method: 'PUT', action: url('admin_user_grant', {id: user.id}) }) }}
        {{ form_widget(form) }}
        <div class="form-group row float-sm-right">
            <input type="submit" value="{{ 'action.save'|trans }}" class="btn btn-primary" />
        </div>
        <div class="form-group row float-sm-left">
            <a href="{{ url('admin_list_users') }}" class="btn btn-link">
                {{ 'action.back_to_list'|trans }}
            </a>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}