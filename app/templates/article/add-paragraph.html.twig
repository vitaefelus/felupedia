{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.paragraph_new'|trans }}
{% endblock %}

{% block body %}
    <div class="container container-fix">
        <h1>{{ 'title.paragraph_new'|trans }}</h1>
        {{ form_start(form, { method: 'POST', action: url('article_add_paragraph', {id: article.id}) }) }}
        {{ form_widget(form) }}
        <div class="form-group row float-sm-right">
            <input type="submit" value="{{ 'action.save'|trans }}" class="btn btn-primary" />
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}