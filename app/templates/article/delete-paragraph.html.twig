{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.paragraph_new'|trans }}
{% endblock %}

{% block body %}
    <div class="container container-fix">
        <h1>{{ 'title.paragraph_delete'|trans }}</h1>
        {{ form_start(form, { method: 'DELETE', action: url('article_delete_paragraph', {id: article.id, paragraph: paragraph.id}) }) }}
        {{ form_widget(form) }}
        <div class="form-group row float-sm-right">
            <input type="submit" value="{{ 'action.save'|trans }}" class="btn btn-primary" />
        </div>
        <div class="form-group row float-sm-left">
            <a href="{{ url('article_view', {id: article.id}) }}" class="btn btn-link">
                {{ 'action.back_to_list'|trans }}
            </a>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}